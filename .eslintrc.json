{
    "rules": {
        "indent": [2, 4],
        "quotes": [2, "single"],
        "linebreak-style": [2, "windows"],
        "semi": [2, "always"],
        "no-var": 2,
        "arrow-spacing": 2,
        "space-after-keywords": 2,
        "space-before-blocks": 2
    },
    "env": {
        "es6": true,
        "browser": true,
        "jasmine": true
    },
    "ecmaFeatures": {
        "modules": true,
        "blockBindings": true
    },
    "extends": "eslint:recommended"
}